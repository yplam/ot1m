config APP_MANUFACTURER
    string "app manufacturer"
    default "OT1M"

config APP_MODEL_NUMBER
    string "app model number"
    default "OT1M"

config APP_FIRMWARE_VER
    string "app firmware version"
    default "1.0.0"

config APP_HW_VER
    string "app hardware version"
    default "1.0"

config APP_AT_MODEM
    bool "enable app at modem module"
    default n

config APP_MODEM_EN_PIN
    bool "enable app at modem module"
    default n

config APP_LWM2M
    bool "enable app lwm2m module"
    default n

config APP_COAP
    bool "enable app coap module"
    default n

config APP_TESTING
    bool "enable app testing"
    default n

config APP_OPENTHREAD_AUTO_START
    bool "Auto Start Saved Network"
    default y

config APP_OPENTHREAD_CHILD_TIMEOUT
    int "Openthread SED child timeout"
    default 240

config APP_OPENTHREAD_ACTIVE_POLL_PERIOD
    int "Openthread SED active poll period"
    default 100

config APP_OPENTHREAD_SLEEPY_POLL_PERIOD
    int "Openthread SED sleepy poll period"
    default 30000

config APP_AT_DEV_NAME
	string "Device Name of UART Device for AT Command"
	default "UART_0"

config APP_AT_DEV_ALWAYS_ON
    bool "AT UART not enter low power mode"
    default n

config APP_AT_CMD_MAX_LEN
	int "AT CMD MAX SIZE"
	default 512

config APP_AT_RESPONSE_MAX_LEN
	int "AT RESPONSE MAX SIZE"
	default 512

config APP_MAX_COAP_MSG_LEN
	int "AT COAP MAX SIZE"
	default 256

config APP_AT_MAX_PARAM
    int "AT CMD MAX PARAM"
	default 10

config APP_COAP_MAX_URI_LEN
    int "COAP MAX URI LEN"
	default 10

