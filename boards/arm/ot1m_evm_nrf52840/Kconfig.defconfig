# NRF52840OT1M NRF52840 board configuration

# SPDX-License-Identifier: Apache-2.0

if BOARD_NRF52840OT1M_NRF52840

config BOARD
	default "nrf52840ot1m_nrf52840"

if USB

config USB_NRFX
	default y

config USB_DEVICE_STACK
	default y

endif # USB

config IEEE802154_NRF5
	default y
	depends on IEEE802154

config BT_CTLR
	default BT

endif # BOARD_NRF52840OT1M_NRF52840
